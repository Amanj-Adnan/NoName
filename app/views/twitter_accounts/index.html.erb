<h1 class="text-3xl text-gray-700 font-semibold m-3 p-3"> Twitter Accounts</h1>

<% @twitter_accounts.each do | twitter_account | %>
  <div class="flex flex-col  text-l font-semibold text-gray-700  m-3 p-3 " >
    <%= twitter_account.username %>
    <%= image_tag twitter_account.image, class: "rounded-full h-16 w-16 flex items-center justify-center" %>
    <%= button_to "disconnect" , twitter_account , method: :delete , class:"m-3 text-indigo-700 ", data:{confirm:"are you sure?"} %>
  </div>
<% end %>

<button class="bg-transparent hover:bg-indigo-500 text-indigo-700 font-semibold hover:text-white py-2 px-4 border border-indigo-500 hover:border-transparent rounded p-3 m-3 "><%= link_to "Connect a Twitter Account" , "/auth/twitter" , method: :post , class: "" %></button>