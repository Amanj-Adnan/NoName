<h1 class="text-3xl font-semibold text-gray-800 font-serif">Edit tweets</h1>

<div class="flex flex-col">


  <%= form_with model: @tweet ,html: {class:"mt-3 space-y-6"} do |form| %>
    <% if form.object.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Holy smokes!</strong>
        <% form.object.errors.full_messages.each do |message|   %>
          <span class="block sm:inline"><%=message %></span>
        <%end %>
      </div>
    <%end %>


    <div class="mb-3">
      <%= form.label :twitter_account_id  ,class:""%>
      <%= form.collection_select :twitter_account_id , Current.user.twitter_accounts ,:id , :username , {},{class:"appearance-none rounded-none relative block w-full b-2 px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"} %>
    </div>

    <div class="mb-3">
      <%= form.label :body  ,class:""%>
      <%= form.text_area :body ,{class:"appearance-none rounded-none relative block w-full b-2 px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"} %>
    </div>


    <div class="mb-3">
      <%= form.label :publish_at  ,class:""%>
      <%= form.datetime_select :publish_at ,{class:"appearance-none rounded-none relative block w-full b-2 px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"} %>
    </div>

    <%= form.button "create"  ,class:"group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>

  <% end %>




</div>