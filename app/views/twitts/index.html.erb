<div class="  flex justify-between  ">
  <h1 class="text-3xl font-semibold text-gray-800 font-serif">Your tweets</h1>
  <% if Current.user.twitter_accounts.any? %>
  <%= link_to "create a tweet" , new_twitt_path, class:"bg-transparent hover:bg-indigo-500 text-indigo-700 font-semibold hover:text-white py-2 px-4 border border-indigo-500 hover:border-transparent rounded p-3 m-3" %>

  <%end %>



  <% if Current.user.twitter_accounts.none? %>
    <%= link_to "connect your twitter account" ,"/auth/twitter",method: :post, class:"bg-transparent hover:bg-indigo-500 text-indigo-700 font-semibold hover:text-white py-2 px-4 border border-indigo-500 hover:border-transparent rounded p-3 m-3" %>

  <%end %>


</div>

<%= render @tweets %>